{
  "name": "reciple-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm exec rimraf ./modules && pnpm exec tsc",
    "start": "pnpm exec reciple",
    "test": "pnpm exec reciple -c ./reciple.test.yml",
    "build:start": "pnpm run build && pnpm run start",
    "build:test": "pnpm run build && pnpm run test",
    "dev": "pnpm exec nodemon --watch src --ext ts,mts,cts --exec \"pnpm run build:test\" --signal SIGHUP"
  },
  "dependencies": {
    "@falloutstudios/sourcebin.js": "^2.0.2",
    "@reciple/client": "^7.6.0",
    "axios": "^1.4.0",
    "discord.js": "^14.11.0",
    "discord.js-docs": "^0.3.0",
    "fallout-utility": "^2.5.0",
    "ms": "^2.1.3",
    "reciple": "7.7.0",
    "reciple-dev-commands": "^1.0.2",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/ms": "^0.7.31",
    "@types/node": "^20.2.3",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "typescript": "^5.0.4"
  }
}